copy() {
  # Define the path to the clipboard file
  CLIPBOARD_FILE="/tmp/clipboard_files_list"

  # Ensure the clipboard file exists
  touch "$CLIPBOARD_FILE"

  # Clear the clipboard file before copying new files
  >"$CLIPBOARD_FILE"

  # Iterate over all arguments (files/directories to copy)
  for file in "$@"; do
    # Check if the file exists
    if [ -e "$file" ]; then
      # Convert to absolute path and append to the clipboard file
      readlink -f "$file" >>"$CLIPBOARD_FILE"
    else
      echo "Warning: '$file' does not exist and will be skipped."
    fi
  done

  echo "Files copied to clipboard."
}

paste() {
  # Define the path to the clipboard file
  CLIPBOARD_FILE="/tmp/clipboard_files_list"

  # Check if the clipboard file exists and is not empty
  if [ ! -s "$CLIPBOARD_FILE" ]; then
    echo "Clipboard is empty."
    return 1
  fi

  # Set the destination directory to the current directory if not specified
  dest="${1:-.}"

  # Ensure the destination directory exists
  if [ ! -d "$dest" ]; then
    echo "Destination directory '$dest' does not exist."
    return 1
  fi

  # Copy each file/directory listed in the clipboard file to the destination
  while IFS= read -r file; do
    if [ -e "$file" ]; then
      cp -r "$file" "$dest"
    else
      echo "Warning: Source '$file' no longer exists."
    fi
  done <"$CLIPBOARD_FILE"

  echo "Files pasted to '$dest'."

  # Optionally, clear the clipboard after pasting
  # Uncomment the following line if you want to clear the clipboard
  # rm -f "$CLIPBOARD_FILE"
}

